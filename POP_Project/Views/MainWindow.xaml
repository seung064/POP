<Window x:Class="POP_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid>

        <!-- 메인 페이지 컨텐츠 -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />

        <Border Background="#333"
                Width="200"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Left"
                Visibility="{Binding IsMenuOpen, Converter={StaticResource BoolToVis}}">
            <StackPanel Margin="10">
                <Button Content="Vision"
                        Margin="0,10,0,0"
                        Height="40"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="White"
                        Command="{Binding NavigateVisionCommand}"/>

                <Button Content="Performance"
                        Margin="0,10,0,0"
                        Height="40"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="White"
                        Command="{Binding NavigatePerformanceCommand}"/>

                <Button Content="Logout"
                        Margin="0,10,0,0"
                        Height="40"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="White"
                        Command="{Binding LogoutCommand}"/>
            </StackPanel>
        </Border>

        <!-- 햄버거 버튼 (오른쪽 상단 고정) -->
        <Button Content="☰"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Width="40"
                Height="40"
                FontSize="24"
                Background="Transparent"
                Cursor="Hand"
                Command="{Binding OpenMenuCommand}" 
                Visibility="{Binding IsHamburgerVisible, Converter={StaticResource BoolToVis}}"/>
    </Grid>
</Window>

