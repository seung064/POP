<Page x:Class="POP_Project.Views.VisionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POP_Project.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VisionPage">

    <Grid Background="LightGray">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Button Content="Open Conveyer"
                    Width="200" Height="50" FontSize="20" Margin="30"
                    Command="{Binding OpenCamera}"
                    Background="White" Cursor="Hand" />
            <Button Content="Open QRcode"
                    Width="200" Height="50" FontSize="20" Margin="30"
                    Command="{Binding OpenQRCode}"
                    Background="White" Cursor="Hand" />
        </StackPanel>

        <Button Content="←"
                Width="50" Height="50" FontSize="30" FontWeight="Bold"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10, 60, 10, 10"
                Command="{Binding NavigateBackCommand}"
                Background="Transparent" Cursor="Hand" />
    </Grid>
</Page>
